<clientConfig version="1.1">
  <emailProvider id="fastwebnet.it">
    <domain>fastwebnet.it</domain>
    <displayName>fastwebnet.it</displayName>
    <displayShortName>fastwebnet.it</displayShortName>
    <incomingServer type="imap">
      <hostname>imap.fastwebnet.it</hostname>
      <port>143</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-encrypted</authentication>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>smtp.fastwebnet.it</hostname>
      <port>587</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-encrypted</authentication>
    </outgoingServer>
    <documentation url="http://www.fastweb.it/myfastpage/assistenza/guide-fisso/configurazioni/posta-elettronica/config-mozilla-thunderbird/">
    </documentation>
  </emailProvider>
</clientConfig>
