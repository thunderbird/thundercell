<?xml version="1.0" encoding="UTF-8"?>
<clientConfig version="1.1">
    <emailProvider id="sapo.pt">	
      <domain>sapo.pt</domain> 
      <domain>sapo.cv</domain>		
      <domain>sapo.ao</domain>
      <domain>sapo.mz</domain>
      <domain>sapo.tl</domain>
      <domain>meo.pt</domain>	   
      <displayName>SAPO Mail</displayName>
      <displayShortName>SAPO</displayShortName>
      <incomingServer type="imap">
         <hostname>imap.sapo.pt</hostname>
         <port>993</port>
         <socketType>SSL</socketType>
         <authentication>password-cleartext</authentication>
         <username>%EMAILADDRESS%</username>
      </incomingServer>	  
      <incomingServer type="pop3">
         <hostname>pop.sapo.pt</hostname>
         <port>995</port>
         <socketType>SSL</socketType>
         <authentication>password-cleartext</authentication>
         <username>%EMAILADDRESS%</username>
      </incomingServer>
      <outgoingServer type="smtp">
         <hostname>smtp.sapo.pt</hostname>
         <port>465</port>
         <socketType>SSL</socketType>
         <authentication>password-cleartext</authentication>
         <username>%EMAILADDRESS%</username>
      </outgoingServer>  
      <documentation url="https://ajuda.sapo.pt/configurar-programa-de-email-70015">
         <descr lang="en">E-mail settings for addresses ending in @sapo.pt</descr>
      </documentation>
    </emailProvider>
</clientConfig>
